<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" default-cascade="all" >
    <class name="com.tfk.assessment.domain.model.index.Index" abstract="true" table="as_Index" lazy="true"
           dynamic-update="false">

        <id name="id" type="long" column="id" unsaved-value="-1">
            <generator class="native" />
        </id>
        <!-- 设置鉴别器，column：在数据库中的列。根据该列的值判断是什么类型 -->
        <discriminator column="category" type="java.lang.String"></discriminator>
        <component name="indexId" class="com.tfk.share.domain.id.index.IndexId">
            <property name="id" column="indexId" type="java.lang.String"/>
        </component>

        <property name="name" column="name" type="java.lang.String"/>
        <property name="description" column=" description" type="java.lang.String"/>
        <property name="score" column="score" type="java.lang.Double"/>
        <property name="weight" column="weight" type="java.lang.Double"/>

        <set name="children"  cascade="all" fetch="join" lazy="true" order-by="id" where="removed=0">
            <key column="parentIndexId" update="false"/>
            <one-to-many class="com.tfk.assessment.domain.model.index.Index"/>
        </set>
        <many-to-one name="parent" column="parentIndexId" class="com.tfk.assessment.domain.model.index.Index"/>
        <many-to-one name="mapped" column="mappendIndexId" class="com.tfk.assessment.domain.model.index.Index"/>

        <subclass name="com.tfk.assessment.domain.model.index.EstheticsIndex" discriminator-value="M" />
        <subclass name="com.tfk.assessment.domain.model.index.SportsIndex" discriminator-value="T"/>
        <subclass name="com.tfk.assessment.domain.model.index.IntelligenceIndex" discriminator-value="Z"/>
        <subclass name="com.tfk.assessment.domain.model.index.LaboursIndex" discriminator-value="L"/>
        <subclass name="com.tfk.assessment.domain.model.index.MoralsIndex" discriminator-value="D"/>
    </class>

</hibernate-mapping>
