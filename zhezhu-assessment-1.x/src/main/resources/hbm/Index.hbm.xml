<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" default-cascade="all" >
    <class name="com.tfk.assessment.domain.model.index.Index" table="as_Index" lazy="true">

        <id name="id" type="long" column="id" unsaved-value="-1">
            <generator class="native" />
        </id>

        <component name="indexId" class="com.tfk.share.domain.id.index.IndexId">
            <property name="id" column="indexId" type="java.lang.String"/>
        </component>

        <component name="owner" class="com.tfk.share.domain.id.identityaccess.TenantId">
            <property name="id" column="ownerId" type="java.lang.String"/>
        </component>

        <component name="score" class="com.tfk.assessment.domain.model.index.IndexScore">
            <property name="score" column="score" type="java.lang.Double"/>
            <property name="weight" column="weight" type="java.lang.Double"/>
        </component>

        <property name="category" column="category" >
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">com.tfk.assessment.domain.model.index.IndexCategory</param>
                <param name="useNamed">true</param>
            </type>
        </property>
        <property name="name" column="name" type="java.lang.String"/>
        <property name="description" column=" description" type="java.lang.String"/>

        <set name="children"  cascade="all" fetch="join" lazy="true" order-by="id" where="removed=0">
            <key column="parentId" property-ref="indexId" update="false"/>
            <one-to-many class="com.tfk.assessment.domain.model.index.Index" />
        </set>
        <set name="mappings"  cascade="all" fetch="join" lazy="true" order-by="id" where="removed=0">
            <key column="indexId" property-ref="indexId" update="false"/>
            <one-to-many entity-name="indexMapping"/>
        </set>

        <many-to-one name="parent" class="com.tfk.assessment.domain.model.index.Index" column="parentId" property-ref="indexId" />
    </class>
    <class name="com.tfk.assessment.domain.model.index.IndexMapping" entity-name="indexMapping" table="as_Index_Mapping"
           lazy="true" >
        <id name="id" type="long" column="id" unsaved-value="-1">
            <generator class="native" />
        </id>
        <many-to-one name="mapper" class="com.tfk.assessment.domain.model.index.Index" column="indexId" property-ref="indexId" />
        <many-to-one name="mapped" class="com.tfk.assessment.domain.model.index.Index" column="mappedId" property-ref="indexId" />
        <component name="score" class="com.tfk.assessment.domain.model.index.IndexScore">
            <property name="score" column="score" type="java.lang.Double"/>
            <property name="weight" column="weight" type="java.lang.Double"/>
        </component>
    </class>

</hibernate-mapping>
