<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" default-cascade="all" >
    <class name="com.tfk.ts.domain.model.school.student.Student" table="ts_student" lazy="true" dynamic-update="false">
        <id name="id" type="long" column="id" unsaved-value="-1">
            <generator class="native" />
        </id>
        <component name="schoolId" class="com.tfk.ts.domain.model.school.SchoolId">
            <property name="id" column="schoolId" type="java.lang.String"/>
        </component>

        <component name="studentId" class="com.tfk.ts.domain.model.school.student.StudentId">
            <property name="id" column="studentId" type="java.lang.String"/>
        </component>

        <property name="name" column="name" type="java.lang.String"/>
        <property name="gender" column="gender" >
            <type name="com.tfk.commons.port.adapter.persistence.hibernate.FieldEnumType">
                <param name="enumClass">com.tfk.ts.domain.model.school.common.Gender</param>
                <param name="field">name</param>
            </type>
        </property>

        <set name="ids"  cascade="all" fetch="join" lazy="true" order-by="id">
            <key column="studentId" property-ref="studentId" update="false"/>
            <one-to-many class="com.tfk.ts.domain.model.school.student.StudentIdentity"/>
        </set>
        <set name="belongTos"  cascade="all" fetch="join" lazy="true" order-by="id">
            <key column="studentId" property-ref="studentId" update="false"/>
            <one-to-many class="com.tfk.ts.domain.model.school.student.BelongToClazz"/>
        </set>
        <set name="studies"  cascade="all" fetch="join" lazy="true" order-by="id">
            <key column="studentId" property-ref="studentId" update="false"/>
            <one-to-many class="com.tfk.ts.domain.model.school.student.Study"/>
        </set>
    </class>


    <class name="com.tfk.ts.domain.model.school.student.StudentIdentity" table="ts_student_identity" lazy="true" dynamic-update="false">
        <id name="id" type="long" column="id" unsaved-value="-1">
            <generator class="identity" />
        </id>
        <component name="entityId" class="com.tfk.ts.domain.model.school.student.StudentId">
            <property name="id" column="studentId" type="java.lang.String"/>
        </component>
        <property name="value" column="identity" type="java.lang.String"/>
        <property name="type" column="identityTypeName" >
            <type name="com.tfk.commons.port.adapter.persistence.hibernate.FieldEnumType">
                <param name="enumClass">com.tfk.ts.domain.model.school.common.IdentityType</param>
                <param name="field">name</param>
            </type>
        </property>

        <component name="validity" class="com.tfk.ts.domain.model.school.common.Period">
            <property name="starts" column="validityStarts" type="java.util.Date"/>
            <property name="ends" column="validityEnds" type="java.util.Date"/>
        </component>
    </class>

    <class name="com.tfk.ts.domain.model.school.student.BelongToClazz" table="ts_student_belong" lazy="true" dynamic-update="false">
        <id name="id" type="long" column="id" unsaved-value="-1">
            <generator class="identity" />
        </id>
        <component name="schoolId" class="com.tfk.ts.domain.model.school.SchoolId">
            <property name="id" column="schoolId" type="java.lang.String"/>
        </component>
        <component name="clazzId" class="com.tfk.ts.domain.model.school.clazz.ClazzId">
            <property name="id" column="clazzId" type="java.lang.String"/>
        </component>
        <component name="studentId" class="com.tfk.ts.domain.model.school.student.StudentId">
            <property name="id" column="studentId" type="java.lang.String"/>
        </component>

        <component name="period" class="com.tfk.ts.domain.model.school.common.Period">
            <property name="starts" column="joinDate" type="java.util.Date"/>
            <property name="ends" column="leafDate" type="java.util.Date"/>
        </component>
    </class>

    <class name="com.tfk.ts.domain.model.school.student.Study" table="ts_student_study" lazy="true" dynamic-update="false">
        <id name="id" type="long" column="id" unsaved-value="-1">
            <generator class="identity" />
        </id>
        <component name="schoolId" class="com.tfk.ts.domain.model.school.SchoolId">
            <property name="id" column="schoolId" type="java.lang.String"/>
        </component>
        <component name="clazzId" class="com.tfk.ts.domain.model.school.clazz.ClazzId">
            <property name="id" column="clazzId" type="java.lang.String"/>
        </component>
        <component name="studentId" class="com.tfk.ts.domain.model.school.student.StudentId">
            <property name="id" column="studentId" type="java.lang.String"/>
        </component>
        <component name="grade" class="com.tfk.ts.domain.model.school.Grade">
            <property name="name" column="gradeName" type="java.lang.String"/>
            <property name="seq" column="gradeSeq" >
                <type name="com.tfk.commons.port.adapter.persistence.hibernate.FieldEnumType">
                    <param name="enumClass">com.tfk.ts.domain.model.school.GradeLevel</param>
                    <param name="field">seq</param>
                </type>
            </property>
            <component name="year" class="com.tfk.ts.domain.model.school.StudyYear">
                <property name="name" column="yearName" type="java.lang.String"/>
                <property name="startsYear" column="yearStarts" type="java.lang.Integer"/>
                <property name="endsYear" column="yearEnds" type="java.lang.Integer"/>
            </component>
        </component>
        <component name="course" class="com.tfk.ts.domain.model.school.Course">
            <property name="name" column="courseName" type="java.lang.String"/>
            <property name="subjectId" column="subjectId" type="java.lang.String"/>
        </component>
        <component name="period" class="com.tfk.ts.domain.model.school.common.Period">
            <property name="starts" column="starts" type="java.util.Date"/>
            <property name="ends" column="ends" type="java.util.Date"/>
        </component>
    </class>

</hibernate-mapping>
