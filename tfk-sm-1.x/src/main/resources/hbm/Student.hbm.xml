<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" default-cascade="all" >

    <class name="com.tfk.sm.domain.model.student.Student" table="sm_student" lazy="true" dynamic-update="false">
        <id name="id" type="long" column="id" unsaved-value="-1">
            <generator class="native" />
        </id>
        <component name="studentId" class="com.tfk.share.domain.id.school.StudentId">
            <property name="id" column="studentId" type="java.lang.String"/>
        </component>
        <component name="personId" class="com.tfk.share.domain.id.PersonId">
            <property name="id" column="personId" type="java.lang.String"/>
        </component>
        <component name="schoolId" class="com.tfk.share.domain.id.school.SchoolId">
            <property name="id" column="schoolId" type="java.lang.String"/>
        </component>

        <property name="name" column="name" type="java.lang.String"/>
        <property name="gender" column="gender" >
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">com.tfk.share.domain.person.Gender</param>
                <param name="useNamed">true</param>
            </type>
        </property>
        <property name="birthday" column="birthday" type="java.util.Date"/>
        <property name="joinDate" column="joinDate" type="java.util.Date"/>
        <property name="offDate" column="offDate" type="java.util.Date"/>

        <set name="contacts"  cascade="all" fetch="join" lazy="true" order-by="id" >
            <key column="personId"  update="false"/>
            <one-to-many  entity-name="StudentContacts" />
        </set>
        <set name="studies" cascade="all" fetch="join" lazy="true" order-by="dateStarts">
            <key column="studentId" property-ref="studentId" update="false"/>
            <one-to-many entity-name="Study"/>
        </set>
        <set name="manageds" cascade="all" fetch="join" lazy="true" order-by="dateStarts">
            <key column="studentId" property-ref="studentId" update="false"/>
            <one-to-many entity-name="StudentManaged"/>
        </set>
    </class>

    <class name="com.tfk.share.domain.person.Contact" table="sm_student_contact" abstract="true"
           entity-name="StudentContacts" >
        <id name="id" type="long" column="id" unsaved-value="-1">
            <generator class="identity" />
        </id>
        <!-- 设置鉴别器，column：在数据库中的列。根据该列的值判断是什么类型 -->
        <discriminator column="category" type="java.lang.String"></discriminator>
        <component name="personId" class="com.tfk.share.domain.id.PersonId">
            <property name="id" column="personId" type="java.lang.String"/>
        </component>

        <property name="name" column="name" type="java.lang.String"/>
        <property name="info" column="info" type="java.lang.String"/>
        <subclass name="com.tfk.share.domain.person.contact.Email" entity-name="StudentContactsEmail" discriminator-value="Email" />
        <subclass name="com.tfk.share.domain.person.contact.QQ" entity-name="StudentContactsQQ" discriminator-value="QQ" />
        <subclass name="com.tfk.share.domain.person.contact.Weixin" entity-name="StudentContactsWeixin"  discriminator-value="Weixin" />
        <subclass name="com.tfk.share.domain.person.contact.Mobile" entity-name="StudentContactsMobile"  discriminator-value="Mobile" />
        <subclass name="com.tfk.share.domain.person.contact.Phone" entity-name="StudentContactsPhone"  discriminator-value="Phone" />
    </class>

    <class name="com.tfk.sm.domain.model.student.Study"
           entity-name="Study" table="sm_student_study" lazy="true">
        <id name="id" type="long" column="id" unsaved-value="-1">
            <generator class="native" />
        </id>
        <component name="studentId" class="com.tfk.share.domain.id.school.StudentId">
            <property name="id" column="studentId" type="java.lang.String"/>
        </component>
        <component name="clazz" class="com.tfk.share.domain.school.TeachAndStudyClazz">
            <component name="schoolId" class="com.tfk.share.domain.id.school.SchoolId">
                <property name="id" column="schoolId" type="java.lang.String"/>
            </component>
            <component name="clazzId" class="com.tfk.share.domain.id.school.ClazzId">
                <property name="id" column="clazzId" type="java.lang.String"/>
            </component>
            <component name="period" class="com.tfk.share.domain.common.Period">
                <property name="starts" column="dateStarts" type="java.util.Date"/>
                <property name="ends" column="dateEnds" type="java.util.Date"/>
            </component>
            <component name="grade" class="com.tfk.share.domain.school.Grade">
                <property name="name" column="gradeName" type="java.lang.String"/>
                <property name="level" column="gradeLevel" type="java.lang.Integer" />
                <component name="studyYear" class="com.tfk.share.domain.school.StudyYear">
                    <property name="yearStarts" column="yearStarts" type="java.lang.Integer"/>
                    <property name="yearEnds" column="yearEnds" type="java.lang.Integer"/>
                </component>
            </component>

            <component name="course" class="com.tfk.share.domain.school.Course">
                <property name="name" column="courseName"/>
                <component name="subjectId" class="com.tfk.share.domain.id.SubjectId">
                    <property name="id" column="subjectId" type="java.lang.String"/>
                </component>
            </component>
        </component>
    </class>


    <class name="com.tfk.sm.domain.model.student.ClazzManaged"
           entity-name="StudentManaged" table="sm_student_managed" lazy="true">
        <id name="id" type="long" column="id" unsaved-value="-1">
            <generator class="native" />
        </id>
        <component name="studentId" class="com.tfk.share.domain.id.school.StudentId">
            <property name="id" column="studentId" type="java.lang.String"/>
        </component>
        <component name="clazz" class="com.tfk.share.domain.school.ManagementClazz">
            <component name="schoolId" class="com.tfk.share.domain.id.school.SchoolId">
                <property name="id" column="schoolId" type="java.lang.String"/>
            </component>
            <component name="clazzId" class="com.tfk.share.domain.id.school.ClazzId">
                <property name="id" column="clazzId" type="java.lang.String"/>
            </component>
            <component name="period" class="com.tfk.share.domain.common.Period">
                <property name="starts" column="dateStarts" type="java.util.Date"/>
                <property name="ends" column="dateEnds" type="java.util.Date"/>
            </component>
            <component name="grade" class="com.tfk.share.domain.school.Grade">
                <property name="name" column="gradeName" type="java.lang.String"/>
                <property name="level" column="gradeLevel" type="java.lang.Integer" />
                <component name="studyYear" class="com.tfk.share.domain.school.StudyYear">
                    <property name="yearStarts" column="yearStarts" type="java.lang.Integer"/>
                    <property name="yearEnds" column="yearEnds" type="java.lang.Integer"/>
                </component>
            </component>
        </component>
    </class>

</hibernate-mapping>
